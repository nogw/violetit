{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./*"],
      "src/tests/*": ["./../test"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "./src/**/*.test.tsx", "./test"],
  "types": ["node"]
}
