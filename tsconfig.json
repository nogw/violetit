{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "jsx": "react",
    "lib": ["esnext"],
    "incremental": true,
    "composite": true,
    "strict": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist", "*.d.ts"]
}
